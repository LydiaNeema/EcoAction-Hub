# Environment Variables Example
# Copy this file to .env and customize as needed

# Prevent Python from creating __pycache__ files
PYTHONDONTWRITEBYTECODE=1

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Database configuration
DATABASE_URL=sqlite:///instance/app.db

# Secret key for sessions (generate a secure random key for production)
SECRET_KEY=your-secret-key-here

# OpenAI API Key (optional - get from https://platform.openai.com/api-keys)
# If not provided, AI chat will use simple rule-based responses
OPENAI_API_KEY=
