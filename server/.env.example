# Environment Variables Example
# Copy this file to .env and customize as needed

# Prevent Python from creating __pycache__ files
PYTHONDONTWRITEBYTECODE=1

# Flask configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=run.py

# Database configuration
DATABASE_URL=sqlite:///instance/app.db

# Secret keys (generate secure random keys for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# OpenAI API Key (optional - get from https://platform.openai.com/api-keys)
# If not provided, AI chat will use simple rule-based responses
OPENAI_API_KEY=

# Frontend URL for CORS (required in production)
# For Vercel deployment: https://eco-action-hub-puce.vercel.app
FRONTEND_URL=http://localhost:3000

# Seed data on first deployment (set to true only once)
SEED_DATA=false
